<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey13"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_activity" />

    <ScrollView
        android:id="@+id/scrollView_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom_chat"
        android:layout_below="@+id/toolbar"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/layout_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:padding="8dp"
            android:scrollbars="none">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/edit_chat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_editv"
            android:singleLine="true"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/tv_bar_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/bg_chat_send_disabled"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/textPrimaryGrey"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>
</RelativeLayout>